@model IEnumerable<MovieRental.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Customers</h1>
<br />

@if (!Model.Any())
{
    <p>No customer has rented this movie</p>
}
else
{
    <table class=" table table-striped table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Name</th>
                <th>Membership Discount</th>
            </tr>
        </thead>
        @foreach (var c in Model)
        {
            <tr>
                <td>@Html.ActionLink(c.Name, "Details", "Customers", new { id = c.Id },null)</td>
                <td>@c.MembershipType.Name</td>
                <td>@c.MembershipType.DiscountRate%</td>
            </tr>
        }

    </table>
}
