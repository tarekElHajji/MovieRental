@model IEnumerable<MovieRental.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Customers List</h1>

<br /><br />

<button type="button" class="btn btn-outline-success">@Html.ActionLink("Add a new customer","create")</button>


<br /><br />

@if (!Model.Any())
{
    <p>No customer has rented this movie</p>
}
else
{
    <table class=" table table-striped table-hover">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Membership Type </th>
                <th>Membership Discount</th>
                <th>Modify</th>
                <th>Details</th>
            </tr>
        </thead>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.MembershipType.Name</td>
                <td>@c.MembershipType.DiscountRate%</td>
                <td>
                    <a href="@Url.Action("Edit", "Customers", new { id = c.Id },null)">
                        <i class="fa fa-pencil"></i>
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Details", "Customers", new { id = c.Id },null)">
                        <i class="fa fa-info"></i>
                    </a>
                </td>
            </tr>
        }

    </table>
}
