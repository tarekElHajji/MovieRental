@model IEnumerable<MovieRental.Models.Movie>
@{
    /**/

    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>



<button type="button" class="btn btn-outline-success">@Html.ActionLink("Add a new movie", "create")</button>
<br /><br />

@if (!Model.Any())
{
    <p>No movie</p>
}
else
{
    <table class=" table table-striped table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
                <th>Modify</th>
                <th>Details</th>
            </tr>
        </thead>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Name</td>
                <td>@m.Genre.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Movies", new { id = m.Id },null)">
                        <i class="fa fa-pencil"></i>
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Details", "Movies", new { id = m.Id },null)">
                        <i class="fa fa-info"></i>
                    </a>
                </td>
            </tr>
        }

    </table>
}
