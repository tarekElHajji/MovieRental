@model IEnumerable<MovieRental.Models.Movie>
@{
    /**/

    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>
<br />

@if (!Model.Any())
{
    <p>No movie</p>
}
else
{
    <table class=" table table-striped table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Name</td>
                <td>@m.Genre.Name</td>
            </tr>
        }

    </table>
}
